.login-container {
    height: 100%;
    padding: 10px 30px;
    background: #fff;
}

.app-info {
    position: relative;
    padding: 20px;
    text-align: center;
}

.app-info:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #E5E5E5;
    color: #E5E5E5;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.app-info .app-logo {
    display: block;
    width: 300px;
    height: 100px;
    margin: 10px auto;
}

.app-info .app-name {
    font-weight: bold;
    font-size: 30px;
    color: #000;
}

.alert {
    margin: 20px 0 30px;
}

.alert .alert-title {
    font-weight: 400;
    font-size: 28px;
    color: #000;
    margin-bottom: 10px;
}

.alert-desc {
    display: block;
    list-style: disc inside none;
}

.alert .alert-text {
    display: list-item;
    text-align: -webkit-match-parent;
    font-size: 26px;
    color: #999;
}
.weui-btn {
    background:#3ba9db;
    color:#fff;
    margin-top:120px;
}
.weui-btn:after {
    border: none;
}