/* pages/detail/detail.wxss */
@import "../../wxParse/wxParse.wxss";
.detail-img image {
    width: 100%;
    height: 360rpx;
}

.introduce-box,.pro-yl {
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx;
}
.introduce-box .title,.pro-yl .title{
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
}
.introduce-box .con,pro-yl .con{
    font-size: 30rpx;
}
.introduce-box .can-shu .can {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    border: 2rpx solid #ddd;
    margin-top: 10rpx;
    background-color: #b2d0d7;
}
.xunpan-box {
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 0;
}
.xunpan {
    width: 100%;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
    background-color: #487FE4;
}

.wxParse-inline {
    font-size: 30rpx;
    FONT-SIZE:14pt;
}
